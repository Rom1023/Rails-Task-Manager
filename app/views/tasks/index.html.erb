<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <li><i class="far fa-check-square"> </i><%= link_to task.title, task_path(task["id"]) %>
      <button class="trash-button"><i class="far fa-trash-alt"></i></button></li> %></li>
  <% else %>
    <li><i class="far fa-square"></i> <%=  link_to task.title, task_path(task["id"]) %>
     <button class="trash-button"><i class="far fa-trash-alt"></i></button></li>
  <% end %>
<% end %>
</ul>



<i class="fas fa-plus"></i><%= link_to 'Add a new task', new_task_path %>

